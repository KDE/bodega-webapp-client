extend layout
block head
    title Login confirmation
    script
      $(document).ready(function() {
        window.setTimeout(function() {
          window.location = '/index';
        }, 2000);
      });
block body
    .page-header
      h1(align="center") Bodega #{network} Addon Store
    if success === true
      .alert.alert-success.success
        | #{message}
    else
      .alert.alert-error.error
        | #{message}
